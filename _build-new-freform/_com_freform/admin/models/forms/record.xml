<?xml version="1.0" encoding="UTF-8"?>
<form
    addrulepath="/administrator/components/com__freform/models/rules"
    addfieldpath="/administrator/components/com__freform/models/fields"
>
    <fieldset
        name="inputs"
        label="COM_FREFORM_FORM_LABEL"
    >
        <field
            name="id"
            type="text"
            label="COM_FREFORM_ID_LABEL"
            description="COM_FREFORM_ID_DESC"
            readonly="readonly"
        />
        <field
            name="title"
            type="text"
            size="30"
            label="COM_FREFORM_TITLE_LABEL"
            description="COM_FREFORM_TITLE_DESC"
            filter="string"
            required="true"
            class=""
            labelclass=""
        />
        <field
            name="slug"
            type="text"
            size="30"
            label="COM_FREFORM_SLUG_LABEL"
            description="COM_FREFORM_SLUG_DESC"
            filter="string"
            required="true"
            class=""
            labelclass=""
        />
        <field name="published" type="list" label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC" class="chzn-color-state"
            filter="intval" size="1" default="1"
        >
            <option value="1">
                JPUBLISHED</option>
            <option value="0">
                JUNPUBLISHED</option>
            <option value="2">
                JARCHIVED</option>
            <option value="-2">
                JTRASHED</option>
        </field>
    </fieldset>
</form>
